extends bootstrap

block title
    | HomeCtrl

block append jsImportsPost
    script(src=base+"static/js/class.js")
    script(src=base+"static/js/socket.io.min.js")
    script(src=base+"static/js/jquery.topics.min.js")
    script(src=base+"static/js/homectrl.js")
    script(src=base+"static/js/plugin.js")

    script(src=base+"static/assets/bootstrap/external/bootstrap-switch.min.js")

    - each jsFile in jsFiles || []
        script(src=base+jsFile)

block append cssImportsPre
    link(href=base+"static/assets/bootstrap/external/bootstrap-switch.min.css", rel="stylesheet", media="screen")

    - each cssFile in cssFiles || []
        link(href=base+cssFile, rel="stylesheet", media="screen")

block cssInline
    style.
        body {
            background-image: url(#{base}static/img/hclogo.png);
            background-position: center top;
            padding-top: 60px;
            padding-bottom: 30px;
        }

        .navbar {
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.5);
        }

        .content-wrapper {
            display: none;
            border-radius: 4px;
            padding: 10px;
            border: 1px solid #ddd;
        }

block jsInline
    script.
        var base = "#{base}";
        var wsHost = "#{wsHost}";
        var wsPort = "#{wsPort}";
        $(function() {
            if (!window.location.hash) {
                var link = $("#navlist").children().first().children().first();
                if (link)
                    window.location.hash = link.attr("href");
            }
        });

block content
    .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
            .container

                a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar

                a.brand(href="#") HomeCtrl

                .nav-collapse.collapse
                    ul.nav#navlist

                    a.btn.btn-primary.pull-right(href=base+"logout") Logout 
                        i.icon-off.icon-white

    .container#content
